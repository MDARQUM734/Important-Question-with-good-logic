class Solution {
    public int maxProduct(int[] nums) {
        int n = nums.length;
        if(n==1) return nums[0];
        int minSoFar = nums[0];
        int maxSoFar = nums[0];
        int result = nums[0];
        for(int i=1; i<n; i++){
            int curr = nums[i];
            if(curr < 0){
                int temp = maxSoFar;
                maxSoFar = minSoFar;
                minSoFar=temp;
            }
            maxSoFar = Math.max(curr,curr*maxSoFar);
            minSoFar = Math.min(curr,curr*minSoFar);
            result = Math.max(maxSoFar,result);
        }
        return result;
    }
}
